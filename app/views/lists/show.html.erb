<h1 class="show-title"><%= @list.name %></h1>

<% @product_lists.each do |product_list| %>
  <% if product_list.taken? %>
    <div class="card-product taken">
      <%= product_list.quantity %>
      <%= product_list.product.name %>
      <%= link_to list_product_list_take_path(@list, product_list) do %>
        <i class="fa-regular fa-square-check"></i>
      <% end %>
    </div>
  <% else%>
    <div class="card-product">
      <%= product_list.quantity %>
      <%= product_list.product.name %>
      <%= link_to list_product_list_take_path(@list, product_list) do %>
        <i class="fa-regular fa-square"></i>
      <% end %>
    </div>
  <% end %>
<% end %>
<%= render "product_lists/new", locales: [@list, ProductList.new] %>
